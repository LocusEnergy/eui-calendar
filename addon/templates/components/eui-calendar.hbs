{{eui-interval-selector date interval
  on-zoom=(action 'zoomOut' (if (eq interval 'month') 'year' 'decade'))
  on-previous=(action (mut date))
  on-next=(action (mut date))
}}

{{#if (eq interval 'month')}}
  {{eui-day-selector date on-select=(action 'selectDay')}}
{{else if (eq interval 'year')}}
  {{eui-month-selector date on-select=(action 'zoomIn' 'month')}}
{{else if (eq interval 'decade')}}
  {{eui-year-selector date on-select=(action 'zoomIn' 'year')}}
{{/if}}
