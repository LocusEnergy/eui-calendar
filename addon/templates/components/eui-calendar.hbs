{{eui-interval-selector date interval
  on-zoom=(action 'onZoom')
  on-previous=(action 'setDate')
  on-next=(action 'setDate')
}}

{{#if (eq interval 'month')}}
  {{eui-day-selector date (action 'selectDay')}}
{{else if (eq interval 'year')}}
  {{eui-month-selector date (action 'selectMonth')}}
{{else if (eq interval 'decade')}}
  {{eui-year-selector date (action 'selectYear')}}
{{/if}}
