{{!-- should these +/- buttons be generic – switch between month / year / decade? --}}

<button {{action 'previousMonth'}}>
  -
</button>

<button {{action 'monthPicker'}}>
  {{moment-format month 'MMMM'}}
  {{month-picker month=month}}
</button>

<button {{action 'nextMonth'}}>
  +
</button>


{{#eui-month month=month selection=selection as |day|}}
  {{#if hasBlock}}
    {{#eui-day tagName="li" day=day is-disabled=(not (moment-same-month month day))}}
      {{yield day}}
    {{/eui-day}}
  {{else}}
    {{eui-day tagName="li" day=day is-disabled=(not (moment-same-month month day))}}
  {{/if}}
{{/eui-month}}
