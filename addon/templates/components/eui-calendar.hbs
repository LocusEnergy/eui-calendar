{{eui-interval-selector date interval
  on-zoom=(action 'onZoom')
  on-previous=(action 'setDate')
  on-next=(action 'setDate')
}}

{{#if (eq interval 'month')}}
  {{eui-day-selector
    month=date
    selection=selection
    select-day=(action 'selectDay')
  }}
{{else if (eq interval 'year')}}
  {{eui-month-selector
    year=date
    select-month=(action 'selectMonth')
  }}
{{else if (eq interval 'decade')}}
  {{eui-year-selector
    decade=date
    select-year=(action 'selectYear')
  }}
{{/if}}
